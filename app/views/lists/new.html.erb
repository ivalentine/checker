<article class="col-md-4 list-container" id="new-list-container">
<%= form_for(@list, remote: true, :html => { class: "form-horizontal" }) do |f| %>
  <% if @list.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@list.errors.count, "error") %> prohibited this list from being saved:</h2>

      <ul>
      <% @list.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "hidden" %>
    <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
  </div>

  <div class="form-group">
    <ul>
      <%= f.fields_for :tasks do |task| %>
      <li>
        <%= task.label :name, class: "hidden" %>
        <%= task.text_field :name, class: "form-control", placeholder: "Task" %>
      </li>
      <% end %>
    </ul>
  </div>

  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-default" %>
  </div>
<% end %>
</article>
