<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "form-horizontal", method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <div class="field col-xs-3">
      <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>
    </div>
  </div>

  <div class="form-group">
    <div class="actions col-xs-3">
      <%= f.submit "Send me password reset instructions", class: "btn btn-default" %>
    </div>
  </div>
<% end %>

<div class="shared-links">
  <%= render "devise/shared/links" %>  
</div>
